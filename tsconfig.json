{
  "compilerOptions": {
    "types": ["node", "mongodb"],
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "*.ts",
    "node_modules/@types/jest/index.d.ts"
  ]
}
